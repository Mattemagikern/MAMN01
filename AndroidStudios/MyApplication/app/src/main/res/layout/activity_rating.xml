<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">


    <Button
        android:id="@+id/ratingbackbutton"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="40dp"
        android:onClick="finishRatingActivity"
        android:text="Go back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ListView android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/ratingbackbutton"
            android:contentDescription=""
            tools:context="mamn01.projekt.RatingActivity"
            android:layout_weight="1"
            android:drawSelectorOnTop="false">

        </ListView>

        <TextView android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="No ratings are registered...\n Go start hug and become the hugmaster!"/>


    </LinearLayout>


</LinearLayout>